%table.email-btn-table{ cellspacing: 0, cellpadding: 0, border: 0, role: 'presentation' }
  %tr
    %td.email-btn-td
      - http_url = url.is_a?(String) ? url.gsub(/^https:/, 'http:') : url
      - if defined?(has_arrow) && !has_arrow
        = link_to text, http_url, class: 'email-btn-a email-btn-hover'
      - else
        = link_to "#{text} âžœ", http_url, class: 'email-btn-a email-btn-hover'
        